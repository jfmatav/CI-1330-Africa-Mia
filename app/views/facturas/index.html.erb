<h1>Listing facturas</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Enino</th>
      <th>Eadulto</th>
      <th>Eamayor</th>
      <th>Tnino</th>
      <th>Tadulto</th>
      <th>Tamayor</th>
      <th>Total</th>
      <th>Notas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.fecha %></td>
        <td><%= factura.eNino %></td>
        <td><%= factura.eAdulto %></td>
        <td><%= factura.eAMayor %></td>
        <td><%= factura.tNino %></td>
        <td><%= factura.tAdulto %></td>
        <td><%= factura.tAMayor %></td>
        <td><%= factura.total %></td>
        <td><%= factura.notas %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

