<%= form_for @tour, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :fecha, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fecha, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hora, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hora, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cupo_total, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cupo_total, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :id_estado, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :id_estado, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cupo_disponible, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cupo_disponible, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tours_path, :class => 'btn' %>
  </div>
<% end %>
