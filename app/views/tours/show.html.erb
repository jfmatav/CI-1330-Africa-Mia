<%- model_class = Tour -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @tour.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora) %>:</strong></dt>
  <dd><%= @tour.hora %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cupo_total) %>:</strong></dt>
  <dd><%= @tour.cupo_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:id_estado) %>:</strong></dt>
  <dd><%= @tour.id_estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cupo_disponible) %>:</strong></dt>
  <dd><%= @tour.cupo_disponible %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tours_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tour_path(@tour), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tour_path(@tour),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
