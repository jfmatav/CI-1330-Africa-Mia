<%- model_class = Reservacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:id_tour) %></th>
      <th><%= model_class.human_attribute_name(:num_cupos_adulto) %></th>
      <th><%= model_class.human_attribute_name(:num_cupos_nino) %></th>
      <th><%= model_class.human_attribute_name(:id_cliente) %></th>
      <th><%= model_class.human_attribute_name(:id_estado) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reservacions.each do |reservacion| %>
      <tr>
        <td><%= link_to reservacion.id, reservacion_path(reservacion) %></td>
        <td><%= reservacion.id_tour %></td>
        <td><%= reservacion.num_cupos_adulto %></td>
        <td><%= reservacion.num_cupos_nino %></td>
        <td><%= reservacion.id_cliente %></td>
        <td><%= reservacion.id_estado %></td>
        <td><%=l reservacion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reservacion_path(reservacion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reservacion_path(reservacion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reservacion_path,
            :class => 'btn btn-primary' %>
