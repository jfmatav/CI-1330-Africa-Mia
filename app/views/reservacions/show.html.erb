<%- model_class = Reservacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id_tour) %>:</strong></dt>
  <dd><%= @reservacion.id_tour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_cupos_adulto) %>:</strong></dt>
  <dd><%= @reservacion.num_cupos_adulto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_cupos_nino) %>:</strong></dt>
  <dd><%= @reservacion.num_cupos_nino %></dd>
  <dt><strong><%= model_class.human_attribute_name(:id_cliente) %>:</strong></dt>
  <dd><%= @reservacion.id_cliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:id_estado) %>:</strong></dt>
  <dd><%= @reservacion.id_estado %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reservacions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservacion_path(@reservacion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservacion_path(@reservacion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
